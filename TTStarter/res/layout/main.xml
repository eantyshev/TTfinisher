<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
	android:keepScreenOn="true" >
	<Chronometer
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/chronometerCurrentTime" />
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="First Number"
		android:id="@+id/textViewFirstNumber" />
	<EditText
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="1"
		android:inputType="number"
		android:id="@+id/editTextFirstNumber" />
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Time Interval"
		android:id="@+id/textViewTimeInterval" />
	<EditText
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="10"
		android:inputType="numberDecimal"
		android:id="@+id/editTextTimeInterval" />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Start Protocol File Path"
		android:id="@+id/textViewStartProtocolFilePath" />
	<EditText
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="start.txt"
		android:id="@+id/editTextStartProtocolFilePath" />
	<Button
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Select File"
		android:id="@+id/buttonSelectFile" />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Wait before first start"
		android:id="@+id/textViewStartDelay" />
	<EditText
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="60"
		android:inputType="number"
		android:id="@+id/editTextWaitBeforeFirst" />
	<Button
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Begin Starts"
		android:id="@+id/buttonStart" />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/textViewNextNumberTitle"
		android:text="Next Number" />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="1"
		android:id="@+id/textViewNextNumber"
		android:textSize="150sp" />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Time till next start" />
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="60"
		android:id="@+id/textViewTimeTillNextStart"
		android:textSize="150sp" />
	<SurfaceView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/surfaceViewCameraPreview" />
</LinearLayout>
